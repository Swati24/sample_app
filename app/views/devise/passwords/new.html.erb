<h3>Forgot your password?</h3>

<%= simple_form_for resource, as: resource_name, url: password_path(resource_name), method: :post do |f| %>
  <%= f.input :email, input_html: { autofocus: true } %>
	<%= f.button :submit, "Send me reset password instructions", class: "btn btn-success" %>
<% end %>

<%= render "devise/shared/links" %>
