<h2>User</h2>
<%= link_to "Notify Editor via email ", notify_editor_user_path(@user), :class => 'btn btn-info pull-right' %>
<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Role:</b>
  <%= @user.role.capitalize %>
</p>

<p>
  <b>Articles count:</b>
  <%= @user.articles_count.to_i %>
</p>


<%= render 'articles/list', articles: @articles, loc: "show" %>

