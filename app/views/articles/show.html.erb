<p>
  <b>Title:</b>
  <%= @article.title %>
</p>

<p>
  <b>Content:</b>
  <%= @article.content %>
</p>

<p>
  <b>Reporter:</b>
  <%= @article.user.try(:name) %>
</p>

<% if can? :update, @article %>
	<%= link_to 'Edit', edit_article_path(@article), :class => 'btn btn-primary' %>
	<%= link_to 'Destroy', @article, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default btn-danger' %>
<% end %>
<%= link_to 'Back', articles_path, :class => 'btn btn-default' %>