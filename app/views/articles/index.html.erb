<h2>Articles</h2>
<div class="span8">
<div class="table-responsive">
<table class="table table-condensed  table-striped">
  <thead>
    <tr>
    <th>Title</th>
    <th>Content</th>
    <th>User</th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>

<% @articles.each do |article| %>
  <tr>
    <td><%= link_to article.title, article %></td>
    <td><%=h truncate(article.content, length: 30) %></td>
    <td><%= article.user.try(:name) %></td>
    <% if can? :update, @article %>
      <td><%= link_to 'Edit', edit_article_path(article), :class => "btn btn-default" %></td>
      <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default btn-danger' %></td>
    <% end %>
  </tr>
<% end %>
 </tbody>
</table>
<%= link_to 'New Article', new_article_path, :class => 'btn btn-primary' if current_user %>
</div>
</div>

<%= will_paginate @articles %>

